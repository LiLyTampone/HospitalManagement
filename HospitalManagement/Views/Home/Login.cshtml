@{
    ViewBag.Title = "Đăng nhập";
}

<div class="login-container">
    <h2>Đăng nhập</h2>
    <form method="post" class="login-form">
        <label for="username">Tên đăng nhập</label>
        <input type="text" id="username" name="username" required />

        <label for="password">Mật khẩu</label>
        <input type="password" id="password" name="password" required />

        <button type="submit" class="btn-login">Đăng nhập</button>
    </form>

    <p class="message">@ViewBag.Message</p>
</div>

<style>
    /* Định dạng tổng thể của trang */
    .login-container {
        width: 350px;
        margin: 50px auto;
        padding: 20px;
        background: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 8px;
        text-align: center;
    }

        /* Tiêu đề */
        .login-container h2 {
            color: #333;
            margin-bottom: 20px;
        }

    /* Ô nhập liệu */
    .login-form label {
        display: block;
        text-align: left;
        font-weight: bold;
        margin-top: 10px;
    }

    .login-form input {
        width: 100%;
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    /* Nút đăng nhập */
    .btn-login {
        width: 100%;
        padding: 10px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        margin-top: 15px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-login:hover {
            background-color: #218838;
        }

    /* Thông báo */
    .message {
        color: red;
        font-weight: bold;
        margin-top: 10px;
    }
</style>
